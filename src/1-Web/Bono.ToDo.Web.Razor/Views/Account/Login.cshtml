@using System.Threading
@using Bono.ToDo.Infrastructure.Resources
@model UserAuthenticateRequestViewModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bono Task | Log in</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="@Url.Content("~/plugins/fontawesome-free/css/all.min.css")">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="@Url.Content("~/plugins/icheck-bootstrap/icheck-bootstrap.min.css")">
    <!-- Theme style -->
    <link rel="stylesheet" href="@Url.Content("~/dist/css/adminlte.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/plugins/flag-icon-css/css/flag-icon.css")">
</head>
<body class="hold-transition login-page"> 
    
    <div class="login-box">
        <div class="login-logo">
            <a href="@Url.Content("~/index2.html")"><b>Bono</b>Task</a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <ul class="navbar-nav ml-auto" style="text-align:center; align-content: center">
                    <!-- Notifications Dropdown Menu -->
                    <li class="nav-item dropdown" style="text-align: center; align-content: center">
                        <a class="nav-link dropdown-toggle" href="#" id="dropdown09" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="text-align: center; align-content: center">
                            @if (Thread.CurrentThread.CurrentCulture.Name == "pt-BR")
                            {
                                <span class="flag-icon flag-icon-br"> </span> @Resources.Portuguese
                            }
                            else
                            {
                                <span class="flag-icon flag-icon-us"> </span> @Resources.English
                            }
                        </a>
                        <div class="dropdown-menu" aria-labelledby="dropdown09" style="margin-left: 29%">
                            <a class="dropdown-item" href="@("/" + this.Context.Request.RouteValues["controller"] + "/" + "SetLanguage?culture=pt-BR&returnUrl=Account/Login")"><span class="flag-icon flag-icon-br"> </span>  @Resources.Portuguese</a>
                            <a class="dropdown-item" href="@("/" + this.Context.Request.RouteValues["controller"] + "/" + "SetLanguage?culture=en-US&returnUrl=Account/Login")"><span class="flag-icon flag-icon-us"> </span>  @Resources.English</a>
                            @*<a class="dropdown-item" href="@(ViewBag.Controller + "/" + "SetLanguage/?culture=pt-BR&returnUrl="+ViewBag.Controller)"><span class="flag-icon flag-icon-es"> </span>  @Resources.Spanish</a>*@
                        </div>
                    </li>
                </ul>

                <form action="@Url.Content("~/Account/Login")" method="post">

                    @Html.AntiForgeryToken()

                    <div class="input-group mb-3">
                        <input id="Email" name="Email" type="email" class="form-control" placeholder="Email">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input id="Password" name="Password" type="password" class="form-control" placeholder="Password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input id="remember" name="remember" type="checkbox">
                                <label for="remember">
                                    Remember Me
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>

                <div class="social-auth-links text-center mb-3">
                    <p>- OR -</p>
                    <a href="#" class="btn btn-block btn-primary">
                        <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
                    </a>
                    <a href="#" class="btn btn-block btn-danger">
                        <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
                    </a>
                </div>
                <!-- /.social-auth-links -->

                <p class="mb-1">
                    <a href="forgot-password.html">I forgot my password</a>
                </p>
                <p class="mb-0">
                    <a href="register.html" class="text-center">Register a new membership</a>
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="@Url.Content("~/plugins/jquery/jquery.min.js")"></script>
    <!-- Bootstrap 4 -->
    <script src="@Url.Content("~/plugins/bootstrap/js/bootstrap.bundle.min.js")"></script>
    <!-- AdminLTE App -->
    <script src="@Url.Content("~/dist/js/adminlte.min.js")"></script>
</body>
</html>
